# Sreen brightness controls
bindsym XF86MonBrightnessUp exec xbacklight -inc 5 # increase screen brightness
bindsym XF86MonBrightnessDown exec xbacklight -dec 5 # decrease screen brightness

# Volume controls
bindsym XF86AudioMute exec amixer set Master toggle
bindsym XF86AudioLowerVolume amixer -q sset Master 5%-
bindsym XF86AudioRaiseVolume amixer -q sset Master 5%+

# Multimedia keys
bindsym XF86AudioPlay exec --no-startup-id "if deadbeef --nowplaying e | grep -q nothing; then deadbeef --play; else deadbeef --toggle-pause; fi"
bindsym XF86AudioPause exec --no-startup-id "if deadbeef --nowplaying e | grep -q nothing; then deadbeef --play; else deadbeef --toggle=pause; fi"
bindsym XF86AudioNext exec --no-startup-id deadbeef --next
bindsym XF86AudioPrev exec --no-startup-id deadbeef --prev

